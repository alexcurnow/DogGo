@model DogGo.Models.ViewModels.WalkerDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Walker</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Walker.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Walker.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Walker.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Walker.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Walker.NeighborhoodId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Walker.NeighborhoodId)
        </dd>
        <dt class = "col-sm-2">
            <img class="bg-info" src="@Model.Walker.ImageUrl" alt="avatar" />
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Walker.ImageUrl)
        </dd>
    </dl>
</div>
<div>
    <h4>Walks</h4>
    <hr />
    <dl class="row">
    @foreach (Walk walk in Model.Walks)
    {
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => walk.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => walk.Date)
        </dd><dt class = "col-sm-2">
            @Html.DisplayNameFor(model => walk.Duration)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => walk.Duration)
        </dd>
    }
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Walker.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
